<AnchorPane prefHeight="700.0" prefWidth="1376.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simple_banking_system.SignUpController">
   <children>
      <ImageView fitHeight="673.0" fitWidth="1115.0" layoutX="204.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../../SignUpInterface.jpg" />
         </image>
      </ImageView>
      <Label fx:id="SignUpCover" layoutX="-4.0" layoutY="-1.0" opacity="0.8" prefHeight="700.0" prefWidth="1382.0" />
      <Label alignment="CENTER" layoutX="1.0" layoutY="119.0" prefHeight="64.0" prefWidth="1378.0" text="Username :" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="44.0" />
         </font>
      </Label>
      <TextField fx:id="UserField" alignment="CENTER" layoutX="445.0" layoutY="192.0" prefHeight="65.0" prefWidth="467.0" promptText="Username">
         <font>
            <Font size="30.0" />
         </font>
      </TextField>
      <Label alignment="CENTER" layoutX="-1.0" layoutY="292.0" prefHeight="64.0" prefWidth="1378.0" text="Password :" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="44.0" />
         </font>
      </Label>
      <Button fx:id="SignUpButton" alignment="CENTER" layoutX="639.0" layoutY="494.0" mnemonicParsing="false" onAction="#setSignUpButton" text="Sign Up" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label alignment="CENTER" layoutX="3.0" layoutY="560.0" prefHeight="64.0" prefWidth="1378.0" text="Already Have an Account ? " textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Button fx:id="LogInButton" layoutX="934.0" layoutY="575.0" mnemonicParsing="false" onAction="#setLogInButton" text="Log In" textFill="#3801ff" underline="true">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Label alignment="CENTER" layoutX="-4.0" layoutY="32.0" prefHeight="44.0" prefWidth="1382.0" text="Sign Up" textAlignment="CENTER" textFill="#3d02ff">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="BackButton" alignment="CENTER" layoutX="35.0" layoutY="20.0" mnemonicParsing="false" onAction="#BackToHomePageFromSignUpPage" text="&lt; Back" textAlignment="CENTER">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <PasswordField fx:id="PassField" alignment="CENTER" layoutX="456.0" layoutY="367.0" prefHeight="65.0" prefWidth="467.0" promptText="Password">
         <font>
            <Font size="29.0" />
         </font>
      </PasswordField>
   </children>
</AnchorPane>
